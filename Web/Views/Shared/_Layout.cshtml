@{
    var layoutModel = (LayoutModel)ViewBag.LayoutModel;

    var languages = Enum.GetValues<eLanguages>()
        .Cast<eLanguages>()
        .Select(language => new SelectListItem() {
            Text = language.GetDescription(),
            Value = language.ToString(),
            Selected = language == layoutModel.Language
        });
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <div class="left">
            <a class="site-name" href="#">
                Е-навчання
            </a>
        </div>
        <div class="center"></div>
        <div class="right">
            @Html.DropDownList("languageSelect", languages, new { @class = "site-language-select" });
            <p class="user-info">Артем Бабенко</p>
        </div>
    </header>

    <nav class="main-nav">
        <div class="links">
            <a href="@Url.Action(nameof(EducationalPlatformController.GetOverviewPage),nameof(EducationalPlatformController).ToControllerName())">
                <i class='fa-solid fa-chart-pie'></i>
                @TranslateResources.OVERVIEW
            </a>
            <a href="@Url.Action(nameof(EducationalPlatformController.GetCoursesPage),nameof(EducationalPlatformController).ToControllerName())">
                <i class='fa-solid fa-book-open'></i>
                @TranslateResources.COURSES
            </a>
            <a href="@Url.Action(nameof(EducationalPlatformController.GetTimetablePage),nameof(EducationalPlatformController).ToControllerName())">
                <i class='fa-regular fa-calendar'></i>
                @TranslateResources.TIMETABLE
            </a>
            <a href="@Url.Action(nameof(EducationalPlatformController.GetTasksPage),nameof(EducationalPlatformController).ToControllerName())">
                <i class='fa-solid fa-list-check'></i>
                @TranslateResources.TASKS
            </a>
            <a href="@Url.Action(nameof(EducationalPlatformController.GetProfilePage),nameof(EducationalPlatformController).ToControllerName())">
                <i class='fa-solid fa-user'></i>
                @TranslateResources.PROFILE
            </a>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="~/lib/js-cookie/js.cookie.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>

    <script src="~/js/Layout.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
